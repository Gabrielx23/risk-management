{
  "name": "risk-management-app",
  "version": "1.0.0",
  "description": "TypeScript, thisless and classless backend with express.js implementation of the risk management app.",
  "main": "server.js",
  "scripts": {
    "build": "rm -r dist && tsc && npm run build:assets",
    "start:prod": "node -r dotenv/config ./dist/server.js",
    "start:dev": "nodemon --watch 'src/**/*.ts' --exec 'ts-node' -r dotenv/config src/server.ts",
    "test": "mocha 'src/**/*.+(spec|test).ts'",
    "test:not-isolated": "mocha 'src/**/*.test.ts'",
    "test:isolated": "mocha 'src/**/*.spec.ts'",
    "format": "prettier --write 'src/**/*.ts'",
    "format:check": "prettier 'src/**/*.ts'",
    "lint:fix": "eslint 'src/**/*.ts' --ignore-pattern '**/*.test.ts' --ignore-pattern '**/*.spec.ts' --fix",
    "lint:check": "eslint 'src/**/*.ts' --ignore-pattern '**/*.test.ts' --ignore-pattern '**/*.spec.ts'",
    "migrate:latest": "ts-node -r dotenv/config src/db/migrate-to-latest.ts",
    "generate:types": "kysely-codegen --out-file=src/db/types.ts",
    "build:assets": "cross-env cp -r ./src/shared/i18n ./dist/shared && cp -r ./src/modules/mail/templates ./dist/modules/mail"
  },
  "author": "Gabriel Åšlawski",
  "license": "MIT",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "cross-env": "^7.0.3",
    "dotenv": "^16.3.1",
    "ejs": "^3.1.9",
    "express": "5.0.0-beta.1",
    "jsonwebtoken": "^9.0.1",
    "kysely": "^0.26.1",
    "lodash.merge": "^4.6.2",
    "lodash.omit": "^4.5.0",
    "lodash.pick": "^4.4.0",
    "lodash.set": "^4.3.2",
    "nodemailer": "^6.9.4",
    "nodemon": "^3.0.1",
    "pg": "^8.11.2",
    "pino": "^8.14.2",
    "pino-pretty": "^10.2.0",
    "slug": "^8.2.3",
    "static-path": "^0.0.4",
    "ts-node": "^10.9.1",
    "typescript": "^5.1.6",
    "uuid": "^9.0.0",
    "zod": "^3.21.4"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.2",
    "@types/cookie-parser": "^1.4.3",
    "@types/cors": "^2.8.13",
    "@types/ejs": "^3.1.2",
    "@types/express": "^4.17.17",
    "@types/jsonwebtoken": "^9.0.2",
    "@types/lodash.merge": "^4.6.7",
    "@types/lodash.omit": "^4.5.7",
    "@types/lodash.pick": "^4.4.7",
    "@types/lodash.set": "^4.3.7",
    "@types/mocha": "^10.0.1",
    "@types/node": "^20.4.5",
    "@types/nodemailer": "^6.4.9",
    "@types/pg": "^8.10.2",
    "@types/slug": "^5.0.3",
    "@types/supertest": "^2.0.12",
    "@types/uuid": "^9.0.2",
    "@typescript-eslint/eslint-plugin": "^6.2.1",
    "@typescript-eslint/parser": "^6.2.1",
    "eslint": "^8.46.0",
    "eslint-import-resolver-node": "^0.3.7",
    "eslint-plugin-import": "^2.28.0",
    "kysely-codegen": "^0.10.1",
    "mocha": "^10.2.0",
    "prettier": "^3.0.0",
    "supertest": "^6.3.3",
    "tsconfig-paths": "^4.2.0"
  }
}